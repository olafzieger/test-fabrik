<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset label="COM_FABRIK_OPTIONS" name="plg-element-field">
		
			<field type="helplink"
				url="PLG_ELEMENT_FIELD_HELP_SERVER" />
				
			<field name="hidden"
				type="radio"
				default="0" 
				class="btn-group"
				description="PLG_ELEMENT_FIELD_HIDDEN_DESC"
				label="PLG_ELEMENT_FIELD_HIDDEN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="default"
				type="textarea"
				cols="45"
				label="PLG_ELEMENT_FIELD_DEFAULT_LABEL"
				rows="6" />
							
			<field name="eval"
				type="radio"
				default="0"
				class="btn-group"
				label="PLG_ELEMENT_FIELD_EVAL_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
		</fieldset>
	</fields>
	
	<fields name="params">
		<fieldset name="plg-element-field-params" label="COM_FABRIK_ADVANCED">
		
		<field description="PLG_ELEMENT_FIELD_PLACEHOLDER_DESC" label="PLG_ELEMENT_FIELD_PLACEHOLDER_LABEL" name="placeholder" size="60" type="text"/>
				
			<field default="0" description="PLG_ELEMENT_FIELD_INPUTTYPE_DESC" label="PLG_ELEMENT_FIELD_INPUTTYPE_LABEL" name="password" type="list">
					<option value="0">PLG_ELEMENT_INPUTTYPE_TEXT</option>
					<option value="1">PLG_ELEMENT_INPUTTYPE_PASSWORD</option>
					<option value="2">PLG_ELEMENT_INPUTTYPE_PHONE</option>
					<option value="3">PLG_ELEMENT_INPUTTYPE_EMAIL</option>
					<option value="4">PLG_ELEMENT_INPUTTYPE_SEARCH</option>
					<option value="5">PLG_ELEMENT_INPUTTYPE_URL</option>
			</field>
			
			<field class="input-mini" default="255" label="PLG_ELEMENT_FIELD_MAX_LENGTH_LABEL" name="maxlength" size="3" type="maxlength"/>
				
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_DISABLE_ELEMENT_DESC" label="PLG_ELEMENT_FIELD_DISABLE_ELEMENT_LABEL" name="disable" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_READ_ONLY_DESC" label="PLG_ELEMENT_FIELD_READ_ONLY_LABEL" name="readonly" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="1"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_AUTOCOMPLETE_DESC" label="PLG_ELEMENT_FIELD_AUTOCOMPLETE_LABEL" name="autocomplete" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="speech"
				type="radio"
				default="0"
				description="PLG_ELEMENT_FIELD_SPEECH_DESC"
				label="PLG_ELEMENT_FIELD_SPEECH_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
				
		</fieldset>
		
		<fieldset label="PLG_ELEMENT_FIELD_FORMATTING" name="plg-field-formatting">

			<field name="bootstrap_class"
				type="bootstrapfieldclass"
				default="input-medium"
				label="PLG_ELEMENT_BOOTSTRAP_CLASS_LABEL"
				description="PLG_ELEMENT_BOOTSTRAP_CLASS_DESC" />
			
			<field default="text" description="PLG_ELEMENT_FIELD_FORMAT_DESC" label="PLG_ELEMENT_FIELD_FORMAT_LABEL" name="text_format" type="list">
					<option value="text">PLG_ELEMENT_FIELD_TEXT</option>
					<option value="integer">PLG_ELEMENT_FIELD_INTEGER</option>
					<option value="decimal">PLG_ELEMENT_FIELD_WIDTH_DECIMAL</option>
			</field>
			
			<field default="6"
				class="input-mini" 
				description="PLG_ELEMENT_FIELD_INTEGER_LENGTH_DESC" label="PLG_ELEMENT_FIELD_INTEGER_LENGTH_LABEL" name="integer_length" type="text"/>
				
			<field default="2"
				class="input-mini" 
				description="PLG_ELEMENT_FIELD_DECIMAL_LENGTH_DESC" label="PLG_ELEMENT_FIELD_DECIMAL_LENGTH_LABEL" name="decimal_length" type="text"/>
			
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_USE_NUMBER_FORMAT_DESC" label="PLG_ELEMENT_FIELD_USE_NUMBER_FORMAT_LABEL" name="field_use_number_format" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
		
			<field class="input-mini" default="," description="PLG_ELEMENT_FIELD_THOUSAND_SEP_DESC" label="PLG_ELEMENT_FIELD_THOUSAND_SEP_LABEL" name="field_thousand_sep" size="3" type="text"/>
		
			<field class="input-mini" default="." description="PLG_ELEMENT_FIELD_DECIMAL_SEP_DESC" label="PLG_ELEMENT_FIELD_DECIMAL_SEP_LABEL" name="field_decimal_sep" size="3" type="text"/>
			
			<field description="PLG_ELEMENT_FIELD_FORMAT_STRING_DESC" label="PLG_ELEMENT_FIELD_FORMAT_STRING_LABEL" name="text_format_string" size="60" type="text"/>
		</fieldset>
		
		<fieldset label="PLG_ELEMENT_FIEILD_GUESS_LINK" name="plg-field-guesslink">
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_FIELD_GUESS_LINK_TYPE_DESC" label="PLG_ELEMENT_FIELD_GUESS_LINK_TYPE_LABEL" name="guess_linktype" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="default" description="PLG_ELEMENT_FIELD_TARGET_OPTIONS_DESC" label="PLG_ELEMENT_FIELD_TARGET_OPTIONS_LABEL" name="link_target_options" type="list">
		     	<option value="default">PLG_ELEMENT_FIELD_NOT_SET</option>
					<option value="_self">PLG_ELEMENT_FIELD_TARGET_SELF</option>
					<option value="_blank">PLG_ELEMENT_FIELD_TARGET_BLANK</option>
					<option value="_parent">PLG_ELEMENT_FIELD_TARGET_PARENT</option>
					<option value="_top">PLG_ELEMENT_FIELD_TARGET_TOP</option>
					<option value="lightbox">PLG_ELEMENT_FIELD_LIGHTBOX</option>	
			</field>
		</fieldset>
	</fields>
</form>
